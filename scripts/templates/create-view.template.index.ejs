<?
var modelVariable = modelName.toLowerCase();
var basePath = modelName.toLowerCase();
var basePathPlural = controllerName.toLowerCase();
?>
<% layout('../layout') -%>
<!--page breadcrumb-->
<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="/<?= basePathPlural ?>"><?= controllerName ?></a> <span class="divider">/</span></li>
</ul>
<%- partial('../messages') %>
<!--page title-->
<div class="page-header">
    <h1>Index of <?= controllerName ?></h1>
</div>

<!--page submenu-->
<div class="row">
    <div class="span12">
        <p>
            <a href="/<?= basePathPlural ?>/add" class="btn btn-primary">
                <i class="icon-plus icon-white"></i> New <?= modelName ?>
            </a>
        </p>
    </div>
</div>
<!--items list-->
<% if (<?= basePathPlural ?>.length > 0) { %>
<table class="table table-striped table-hover">
    <tr>
        <th><%- sortFor('_id' /* field name */,'ID' /* column title */, "Sorting column" /* tooltip message */) %></th>
        <th class="span3">Action</th>
    </tr>
    <% <?= basePathPlural ?>.forEach(function(<?= modelVariable ?>){ %>
    <!--item id <%= <?= modelVariable ?>.id %> -->
    <tr>
        <td><a href="/<?= modelVariable ?>/<%= <?= modelVariable ?>.id %>"><%- formVal(<?= modelVariable ?>.id) %></a>
        </td>
        <td>
            <a class="btn btn-mini" href="/<?= modelVariable ?>/<%= <?= modelVariable ?>.id %>"><i class="icon-list-alt"></i> Detail</a>
            <a class="btn btn-mini" href="/<?= modelVariable ?>/<%= <?= modelVariable ?>.id %>/edit"><i class="icon-edit"></i> Edit</a>
            <a class="btn btn-mini btn-danger" href="/<?= modelVariable ?>/<%= <?= modelVariable ?>.id %>" data-remote="true" data-method="delete" data-jsonp="(function (u) {location.href = u;})"><i class="icon-remove icon-white"></i> Delete</a>
        </td>
    </tr>
    <% }) %>
    <tfoot>
    <tr>
        <td colspan='2'><%- pagerHtml %></td>
    </tr>
    </tfoot>
</table>
<% } else { %>
<!--no items list-->
<p class="alert alert-block alert-info">
    <strong>No <?= basePathPlural ?> were found.</strong>
</p>
<% } %>

